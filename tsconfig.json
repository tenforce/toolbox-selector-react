{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "jsx": "react-jsx",
    "strictNullChecks": true,
    "outDir": "./build",
    "typeRoots": [
      "@types",
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [ "./src/**.test.*" ]
}
